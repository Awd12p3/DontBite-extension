{
  "manifest_version": 3,
  "name": "DontBite!",
  "version": "1.0.3",
  "description": "Post-apocalyptic phishing protection",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "*://mail.google.com/*",
    "*://outlook.office.com/*",
    "*://outlook.live.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/mail/u/*/#inbox/*",
        "*://mail.google.com/mail/u/*/#search/*",
        "*://outlook.office.com/mail/id/*",
        "*://outlook.live.com/mail/id/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/warning.png", "sounds/alert.mp3"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com; object-src 'self'"
  }
}